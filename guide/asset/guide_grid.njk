	{{common_macro.h1_title("cascadingGrid")}}
	{{common_macro.h2_title("html문서 내 호출 및 기본 구조")}}
	<pre class="ui-code"><code class="html">	
	&lt;!-- 기본 -->
	&lt;div data-modules-cascadingGrid>
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
	&lt;/div>

	&lt;!-- 커스텀 옵션 사용 -->
	&lt;div data-modules-cascadingGrid="padding:5;">
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
		&lt;div data-items>&lt;/div>
	&lt;/div>
	</code></pre>

	{{common_macro.h2_title("script에서 호출")}}
	<pre class="ui-code"><code class="javascript">	
	// 기본 옵션없이 호출
	$(Element).cascadingGrid();


	// 커스텀 옵션 사용
	$(Element).cascadingGrid({
		padding:0
	});
	</code></pre>
