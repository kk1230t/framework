{% import "./template/common_macro.njk" as common_macro %}

{% 
    set title = 'Ui Framework' 
%}

{% extends "./template/layout.njk" %}

{% block inline_style %}
<style>
[data-modules-cascadingGrid]{
 	margin: 0 auto;
 	position: relative;

}
[data-items]{
 		position: absolute;
 		top:0;
 		left:0;
 		width: 150px;
		 background: #333;
		 color: #fff;
}
</style>
{% endblock %}


