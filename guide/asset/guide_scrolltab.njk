{% import "./template/common_macro.njk" as common_macro %}

{% 
    set title = 'Ui Framework' 
%}

{% extends "./template/layout.njk" %}

{% block inline_style %}
<style>
.ui-tab{
	white-space: nowrap;
}
.tab-content > .tab-pane.ui-active{
	display: block;
}
.tab-content > .tab-pane {
	display: none;
}
.ui-tab li{display: inline-block;}

.scroll-tab{
	position: relative;
	width: 464px;
}
.scroll-tab .inner-scroll{
	overflow:hidden;
}
.scroll-tab .ui-tab{
	margin: 0 auto;
}
.scroll-tab.next-disabled .next-tab,
.scroll-tab.prev-disabled .prev-tab,
.scroll-tab .scrolltab-btns{
	display: none;
}
.scroll-tab.ui-active .scrolltab-btns{
	display: block;
}
</style>
{% endblock %}

