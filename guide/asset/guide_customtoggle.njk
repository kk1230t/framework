{% 
    set title = 'Ui Framework' 
%}

{% extends "./template/layout.njk" %}

{% block inline_style %}
	<style>
		[data-modules-customtoggle].ui-active{
			background: #000;
			color: #fff;
		}
		.parent-wrap.ui-active  .toggle-body{
			display: block;
		}
		.parent-wrap .toggle-body{
			display: none;
		}
	</style>
{% endblock %}


{% block content %}
	<h1 class="h1_guide">Customtoggle</h1><br>
	<h2 class="h2_guide">html문서 내 호출 및 기본 구조</h2>
	<pre class="ui-code"><code class="html">	
	&lt;!-- 기본(자신이 토글되는 경우) -->
	&lt;button type="button" data-modules-customtoggle>커스텀 토글&lt;/button>

	
	&lt;!-- 커스텀 옵션 사용(부모요소 토글) -->
	&lt;div class="parent-wrap">
		&lt;div class="toggle-body">내용.....&lt;/div>
		&lt;button type="button" data-modules-customtoggle="parent:.parent-wrap">커스텀 토글&lt;/button>
	&lt;/div>
	
	
	&lt;!-- 커스텀 옵션 사용(부모요소 토글, 텍스트 + 닫기버튼) -->
	&lt;div class="parent-wrap">
		&lt;div class="toggle-body">내용.....&lt;/div>
		&lt;button type="button" data-modules-customtoggle="parent:.parent-wrap">
			커스텀 토글
			&lt;span data-text>더보기&lt;/span>
		&lt;/button>
		&lt;span data-close-btn>닫기&lt;/span>	
	&lt;/div>
	</code></pre>
	
	<h2 class="h2_guide">script에서 호출</h2>
	<pre class="ui-code"><code class="javascript">	
	// 기본 옵션없이 호출
	$(Element).customtoggle();


	// 커스텀 옵션 사용
	$(Element).customtoggle({
		'parent':'.parent-wrap'
	});
	</code></pre>
	<h2 class="h2_guide">최소한의 CSS</h2>
	<pre class="ui-code"><code class="css">	
[data-modules-customtoggle].ui-active{
	background: #000;
	color: #fff;
}
.parent-wrap.ui-active  .toggle-body{
	display: block;
}
.parent-wrap .toggle-body{
	display: none;
}
	</code></pre>
